@model MyBlogOnCore.Domain.Project

@{
    ViewBag.Title = "Проекты";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" asp-controller="Projects">
            <div class="form-floating mb-3">
                <input asp-for="Title" class="form-control"/>
                <label asp-for="Title">Title</label>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Description" class="form-control"/>
                <label asp-for="Description">Description</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="LinkToSite" class="form-control"/>
                <label asp-for="LinkToSite">Link to site</label>
                <span asp-validation-for="LinkToSite" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="LinkToImage" class="form-control"/>
                <label asp-for="LinkToImage">Link to image</label>
                <span asp-validation-for="LinkToImage" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="CategoryName" class="form-control"/>
                <label asp-for="CategoryName">Category name</label>
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            
            <div>
                <button class="btn btn-success">Добавить</button>
            </div>
        </form>
    </div>
</div>
