@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<button type="button" class="btn btn-outline-primary float-right btn-sm mb-2 d-print-none" data-toggle="modal" data-target="#imageModal">
    <i class="fa fa-image"></i> @Localizer["Insert image"]
</button>

<div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="modalTitle" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">@Localizer["Select image"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="imagesSelection">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">@Localizer["Close"]</button>
            </div>
        </div>
    </div>
</div>